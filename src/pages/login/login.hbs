<div class="login-container">
  <h1 class="title">Вход</h1>
  <form class='form-login' action="submit" id="formLogin">
    <div class="fields-block">
      {{#FormInput name="login" label="Логин" type="text" error=errors.login value=values.login}} {{/FormInput}}
      {{#FormInput name="password" label="Пароль" type="password" error=errors.password value=values.password}}{{/FormInput}}
    </div>

    {{#Button text="Авторизоваться" id="login"}} {{/Button}}
    <div class="link-block">
      {{#Link href="/registration" text="Нет аккаунта?"}}{{/Link}}
    </div>
    
  </form>
</div>

.form-avatar {
  position: relative;
  margin: auto;
  width: 130px;
  height: 130px;
  background-color: var(--fill-color);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;

  img {
    max-width: 100%;
    max-height: 100%;
    border-radius: 50%;
  }

  .hovered-content {
    cursor: pointer;
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.5;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--background-color);
    visibility: hidden;
  }

  input {
    display: none;
  }

  &:hover {
    cursor: pointer;
  }

  &:hover .hovered-content {
    visibility: visible;
  }

  .avatar {
    display: block;
  }
}

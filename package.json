{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">16"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "tsc --noEmit",
    "build": "npm run prebuild && vite build",
    "start": "npm run prebuild && vite build && node server.cjs",
    "preview": "vite preview",
    "lint": "eslint && npx stylelint \"**/*.pcss\" && tsc --noEmit",
    "test": "mocha",
    "precommit": "npm run lint && npm run test",
    "postinstall": "npx husky install && cp .husky/pre-commit .git/hooks/pre-commit"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.9",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "chai": "^5.1.2",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.2",
    "globals": "^15.9.0",
    "husky": "^8.0.0",
    "jsdom": "^25.0.1",
    "mocha": "^10.8.0",
    "postcss": "^8.4.45",
    "postcss-mixins": "^10.0.1",
    "postcss-preset-env": "^10.0.2",
    "prettier": "3.3.3",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.1"
  },
  "dependencies": {
    "express": "^4.19.2",
    "handlebars": "^4.7.8"
  }
}
